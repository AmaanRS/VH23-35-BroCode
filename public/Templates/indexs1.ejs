<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>Video App</title>
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->

    <style media="screen">
      * {
        margin: 0;
      }
      /* #videoDiv {
        display: grid;
        grid-gap: 10px;
        height: 100%;
        position: relative;
        grid-template-columns: repeat(auto-fill, 300px);
        grid-auto-rows: 300px;
      }
      #footer {
        width: 100%;
        height: 50px;
        background-color: white;
        display: flex;
        justify-content: center;
        flex: 1;
        border-bottom: 1px solid grey;
        margin-top: 10px;
      }
      button {
        height: 30px;
        width: 80px;
        margin-top: 10px;
        text-align: center;
        border-radius: 10px;
        outline: none;
        border: none;
        text-decoration: none;
        background-color: red;
        cursor: pointer;
      /* } */
      video {
        width: 100%;
        height: 45vh;
        object-fit: cover;
        border: 2px solid white;
      }
      /* Container styles */
      .box {
        width: 400px;
        margin: 20px auto;
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 10px;
        background-color: #f5f5f5;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        position: relative;
        overflow: hidden;
      }

      /* Header styles */
      .box h1 {
        font-size: 24px;
        text-align: center;
        margin-bottom: 10px;
      }

      /* Logo styles */
      #logo {
        font-size: 18px;
        text-align: center;
        color: #666;
      }

      /* Form styles */
      #form {
        display: flex;
        flex-direction: column;
      }

      .myname,
      .message {
        margin: 5px 0;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s;
      }

      .myname:focus,
      .message:focus {
        border-color: #007bff;
      }

      button {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      button:hover {
        background-color: #0056b3;
      }

      /* Message area styles */
      #messageArea {
        margin-top: 20px;
        height: 65vh;
        width: 95vb;
        border-radius: 5%;
      }

      /* Message bubble styles */
      .message-bubble {
        background-color: #007bff;
        color: #fff;
        padding: 10px;
        border-radius: 10px;
        margin-bottom: 10px;
        position: relative;
        max-width: 70%;
      }

      .message-bubble::before {
        content: "";
        position: absolute;
        top: 50%;
        right: -10px;
        border-width: 8px;
        border-style: solid;
        border-color: transparent transparent transparent #007bff;
        transform: translateY(-50%);
      }

      /* Animation for message bubbles */
      .message-bubble.fade-in {
        animation: fadeIn 0.5s ease;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      /* Create a container for the two boxes using Flexbox */
      .video-container {
        display: flex;
        flex-direction: column; /* Stack items vertically */
        justify-content: space-between; /* Space between the items */
        height: 300px; /* Set a fixed height for the container */
        padding: 20px;
      }

      /* Style for the individual boxes */
      .video-box {
        background-color: #3498db;
        color: white;
        padding: 10px;
        margin: 5px;
        text-align: center;
      }
      .container {
        display: flex;
        justify-content: space-between;
        height: 100vh; /* Make the container take up the full viewport height */
      }

      /* Style the left box */
      .box {
        flex: 1; /* Make the boxes take up equal space */
        height: 100%;
        background-color: #3498db; /* Blue color for the left box */
      }

      /* Style the right box */
      .box.right {
        background-color: #ffffff; /* Red color for the right box */
      }
      .msg-area {
        border: 1px solid #ccc;
        overflow: auto;
        padding: 10px;
        animation: fadeIn 1s ease-in-out;
      }

      @keyframes fadeIn {
        0% {
          opacity: 0;
        }
        100% {
          opacity: 1;
        }
      }

      .msg {
        background-color: #3498db;
        color: #fff;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        transition: transform 0.3s ease-in-out;
      }

      .msg:hover {
        transform: scale(1.01);
      }
    </style>

    <script type="text/javascript">
      var roomID = "<%= RoomId %>";
    </script>
    <script
      src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"
      defer
    ></script>
    <script src="socket.io/socket.io.js" defer></script>
    <script src="../static/index.js" charset="utf-8" defer></script>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="box">
        <div class="video-container">
          <div class="video-box">
            <div id="videoDiv"></div>
          </div>
        </div>
      </div>

      <div class="box right">
        <h1 class="">Heal well</h1>
        <div>
          <h2 class="" id="logo">Chat with doctor</h2>
        </div>
        <form class="" id="form">
          <input class="myname" type="text" placeholder="Name" id="myname" />
          <input
            class="message"
            type="text"
            placeholder="Message"
            id="message"
          />
          <button class="">Send</button>
        </form>
        <div class="msg-area" id="messageArea"></div>
      </div>
    </div>
  </body>
  <script>
    let socket = io();

    let form = document.getElementById("form");
    let myname = document.getElementById("myname");
    let message = document.getElementById("message");
    let messageArea = document.getElementById("messageArea");

    form.addEventListener("submit", (e) => {
      e.preventDefault();

      if (message.value) {
        socket.emit("send name", myname.value);
        socket.emit("send message", message.value);
        message.value = "";
      }
    });

    socket.on("send name", (username) => {
      let name = document.createElement("div");
      name.className = "msg";
      name.style.backgroundColor = "#C1D8C3";
      name.style.width = "20%";
      name.style.textAlign = "left";
      name.style.color = "black";
      name.textContent = username + ":";
      messageArea.appendChild(name);
    });

    socket.on("send message", (chat) => {
      let chatContent = document.createElement("div");
      chatContent.className = "msg";
      chatContent.style.backgroundColor = "#e0f3ff";
      chatContent.style.color = "#495057";
      chatContent.textContent = chat;
      messageArea.appendChild(chatContent);
    });
  </script>
</html>
